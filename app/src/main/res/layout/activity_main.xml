<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewExpression"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/actionButton"
        android:layout_gravity="end"
        android:maxLines="1"
         />
    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/actionButton"
        android:layout_gravity="end"
        android:maxLines="1"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/numberButton"
                android:id="@+id/textViewClear"
                android:text="Clear"/>

            <ImageView
                android:id="@+id/imageViewDelete"
                style="@style/numberButton"

                android:src="@drawable/backspace"
                android:scaleType="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/numberButton"
                android:text="7"
                />
            <TextView
                android:id="@+id/textView8"
                style="@style/numberButton"
                android:text="8"
                />
            <TextView
                android:id="@+id/textView9"
                style="@style/numberButton"
                android:text="9"
                />
            <TextView
                android:id="@+id/textViewDivision"
                style="@style/numberButton"
                android:text="/"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                style="@style/numberButton"
                android:text="4"
                />
            <TextView
                android:id="@+id/textView5"
                style="@style/numberButton"
                android:text="5"
                />
            <TextView
                android:id="@+id/textView6"
                style="@style/numberButton"
                android:text="6"
                />
            <TextView
                android:id="@+id/textViewMultiply"
                style="@style/numberButton"
                android:text="*"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                style="@style/numberButton"
                android:text="1"
                />
            <TextView
                android:id="@+id/textView2"
                style="@style/numberButton"
                android:text="2"
                />
            <TextView
                android:id="@+id/textView3"
                style="@style/numberButton"
                android:text="3"
                />
            <TextView
                android:id="@+id/textViewSubtract"
                style="@style/numberButton"
                android:text="-"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPoint"
                style="@style/numberButton"
                android:text="."
                />
            <TextView
                android:id="@+id/textViewZero"
                style="@style/numberButton"
                android:text="0"
                />
            <TextView
                android:id="@+id/textViewEquals"
                style="@style/numberButton"
                android:text="="
                />
            <TextView
                android:id="@+id/textViewAdd"
                style="@style/numberButton"
                android:text="+"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>